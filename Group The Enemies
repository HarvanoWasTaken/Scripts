local function GroupEnemies()

local Enemies = workspace.Enemies:GetChildren()
for i = 1, #Enemies, 1 do

wait(0)
Enemies[i].HumanoidRootPart.Orientation = Vector3.new(0, 0, 0)
Enemies[i].HumanoidRootPart.Position = Vector3.New(0, 13, -141)
Enemies[i].HumanoidRootPart.Anchored = true
Enemies[i].HumanoidRootPart.CanCollide = false

end
end

workspace.Enemies.ChildAdded:Connect(GroupEnemies())
workspace.Enemies.ChildRemoved:Connect(GroupEnemies())
